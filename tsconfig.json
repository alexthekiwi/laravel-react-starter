{
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "react-jsx",
        "module": "ES2020",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
        },
        "types": [
            "vite/client"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "public"],
}
